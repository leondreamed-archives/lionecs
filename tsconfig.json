{
	"compilerOptions": {
		"target": "es2015",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
		],
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./src/*"
			],
			"~test/*": [
				"./test/*"
			]
		},
		"declaration": true,
		"outDir": "./dist",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"./src",
		"./test"
	],
	"exclude": [
		"./src/plugins"
	]
}